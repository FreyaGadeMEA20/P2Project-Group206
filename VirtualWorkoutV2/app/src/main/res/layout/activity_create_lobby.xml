<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateLobbyActivity">


    <ImageView
        android:id="@+id/workOut1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/workOut3"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/ic_launcher_background" />

    <ImageView
        android:id="@+id/workOut2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/workOut1"
        app:srcCompat="@drawable/ic_launcher_background" />

    <ImageView
        android:id="@+id/workOut3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@id/workOut4"
        app:srcCompat="@drawable/ic_launcher_background" />

    <ImageView
        android:id="@+id/workOut4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/workOut2"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/ic_launcher_background" />
</RelativeLayout>